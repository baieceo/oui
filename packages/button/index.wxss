/* oui/packages/button/index.wxss */
.oui-btn {
  position: relative;
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  white-space: nowrap;
  user-select: none;
  font-size: 36rpx;
  border-radius: 8rpx;
  border: none !important;
  text-decoration: none;
  height: 100rpx;
  line-height: 100rpx;
  background:#f8d176 !important;
  color: #372813 !important;
}

.oui-btn_hover {
  opacity: .9;
}

.oui-btn_long {
  display: block;
  width: 100%;
  flex: 1;
}

.oui-btn_large {
  height: 100rpx;
  line-height: 100rpx;
}

.oui-btn_small {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.oui-btn_primary {
  background:#f8d176 !important;
  color: #372813 !important;
}

.oui-btn_ghost {
  background:#fff !important;
  color: #f8d176 !important;
  border: 1rpx solid #f8d176 !important;
}

.oui-btn_success {
  background:#232931 !important;
  color: #fff !important;
}

.oui-btn_warning {
  background:#db5e58 !important;
  color: #fff !important;
}

.oui-btn_ghost.oui-btn_warning {
  background:#FFF !important;
  color: #db5e58 !important;
  border: 1rpx solid #db5e58 !important;
}

.oui-btn_error {
  background:#232931 !important;
  color: #fff !important;
}

.oui-btn_info {
  background:#232931 !important;
  color: #fff !important;
}

.oui-btn_circle {
  border-radius: 50rpx;
}

.oui-btn_large.oui-btn_circle {
  border-radius: 50rpx;
}

.oui-btn_small.oui-btn_circle {
  border-radius: 40rpx;
}

.oui-btn_loading {
  opacity: .6;
}

.oui-btn__loading-inner {
  display: inline-block;
  margin-right: 24rpx;
  vertical-align: middle;
  width: 28rpx;
  height: 28rpx;
  background: transparent;
  border-radius: 50%;
  border: 4rpx solid #fff;
  border-color: #fff #fff #fff transparent;
  animation: btn-spin 0.6s linear;
  animation-iteration-count: infinite;
}

.oui-btn_disabled, .oui-btn_disabled.oui-btn_hover {
  color: #e8e8e8 !important;
  background: #ccc !important;
  border-color: #ccc !important;
  opacity: 1;
}

.oui-btn_inline {
  display: inline-block;
}

@keyframes btn-spin {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}