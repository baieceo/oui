.query-wrap {
    height: 90rpx;
    display: flex;
    align-items: center;
}
.query-city {
    white-space:nowrap;
    padding-left: 30rpx;
    font-size: 28rpx;
}
.query-city image {
    width: 20rpx;
    height: 12rpx;
    padding-left: 6rpx;
}
.query-position {
    padding-left: 40rpx;
    width: 572rpx;
    height: 62rpx;
    border-radius: 5rpx;
}
.query-position button {
    height: 100%;
    width: 572rpx;
    line-height: 62rpx;
    text-align: left;
    color:  #BDBDBD;
    letter-spacing: 3rpx;
    padding-left: 30rpx;
    font-size: 28rpx;
}
.query-position input {
    height: 100%;
    line-height: 62rpx;
    background:#F6F6F6;
    letter-spacing: 3rpx;
    padding: 0 30rpx 0 14rpx;
    font-size: 28rpx;
    border-radius: 8rpx;
    caret-color: #F58923;
}
.query-position button::after{
    border: none;
}