/* oui/packages/toast/index.wxss */
.oui-toast {
  position: fixed;
  top: 35%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 16px;
  line-height: 1.5em;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 30rpx 50rpx;
  text-align: center;
  border-radius: 8rpx;
  z-index: 101;
}

.oui-toast__mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.oui-toast__icon {
}

.oui-toast__image {
  max-width: 200rpx;
  max-height: 200rpx;
}

.oui-toast__loading {
  display: inline-block;
  vertical-align: middle;
  width: 56rpx;
  height: 56rpx;
  background: transparent;
  border-radius: 50%;
  border: 4rpx solid #fff;
  border-color: #fff #fff #fff #F77909;
  animation: btn-spin 0.8s linear;
  animation-iteration-count: infinite;
}

@keyframes btn-spin {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}