/* oui/packages/photo-picker/index.wxss */
.oui-photo-picker__body {
  position: relative;
  margin: 0 auto;
  /* border: 1px solid #E7E7E7; */
  border-radius: 10rpx;
  background-color: #F5F5F5;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center center;
  overflow: hidden;
}
.oui-photo-picker__button {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  color: #333333;
  text-align: center;
  line-height: 44rpx;
  background-color: rgba(255, 255, 255, .5);
}
.oui-photo-picker__button::before {
  content: '';
  display: block;
  width: 80rpx;
  height: 80rpx;
  background: url('http://olasharing-prod-r.oss-cn-beijing.aliyuncs.com/sfc-weixinxiaochengxu/common/camera.png') no-repeat 0 0;
  background-size: contain;
  margin-bottom: 16rpx;
}

.oui-photo-picker__loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background: rgba(0, 0, 0, .5);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #fff;
  font-size: 28rpx;
  line-height: 1.5;
}

.oui-photo-picker__loading::before {
  content: '';
  display: block;
  width: 56rpx;
  height: 56rpx;
  background: transparent;
  border-radius: 50%;
  border: 4rpx solid #fff;
  border-color: #fff #fff #fff #F77909;
  animation: btn-spin 0.8s linear;
  animation-iteration-count: infinite;
  margin-bottom: .5em;
}