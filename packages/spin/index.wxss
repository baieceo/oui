/* oui/packages/spin/index.wxss */
.oui-spin_fix {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 120;
  width: 100%;
  height: 100%;
  display: flex;
  background-color: rgba(255, 255, 255, .9);
}

.oui-spin__body {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #979797;
  font-size: 28rpx;
}

.oui-spin__loading {
  display: block;
  width: 56rpx;
  height: 56rpx;
  background: transparent;
  border-radius: 50%;
  border: 4rpx solid #fff;
  border-color: #fff #fff #fff #F77909;
  animation: btn-spin 0.8s linear;
  animation-iteration-count: infinite;
  margin-bottom: 1em;
}